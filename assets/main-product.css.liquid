#product-wrapper {
    display: flex;
    flex-direction: column-reverse;
    flex-wrap: wrap;
    gap: 16px; /* Adjust the gap between items as needed */
  }
  
  .product-title{
    font-size : 1rem;
    font-weight: bolder;
  }

  .buy-button{
    background-color: blue;
    padding: 1rem;
  }
  .product-title,
  .product-price,
  .buy-button,
  .product-image {
     /* Flex-grow, flex-shrink, flex-basis */
  }
  
  /* Add specific styles for different screen sizes */
  @media (min-width: 768px) {
    .product-title,
    .product-price,
    .buy-button,
    .product-image {
      flex: 1 1 48%; /* Adjust for two items per row */
    }
  }
  
  @media (min-width: 1024px) {
    .product-title,
    .product-price,
    .buy-button,
    .product-image {
      flex: 1 1 23%; /* Adjust for four items per row */
    }
  }