

:root {

    // Fallback values (optional)
    --header-font-color: #161515;
    --paragraph-font-color: #0f0f0f;
    --brewdacity-bgcolor: #4440ff;
    --brewdacity-alternate-bg-color: #F8EFE7;
    --brewdacity-alternate-bg-color-warm: #F7A13D;
    --button-color-0: #E6EE87;
    --button-color-1: #677ef8;
    --paragraph-size-fontSize: 1vw;
    --paragraph-size-lineHeight: 48px;
    --header-size-fontSize: 2vw;
    --header-size-lineHeight: 48px;
  }
  
  .header {
    color: var(--header-font-color);
    font-size: var(--header-size-fontSize);
    line-height: var(--header-size-lineHeight);
    font-family: "Montserrat";
    font-weight: 900;
  }
  
  .paragraph {
    color: var(--paragraph-font-color);
    font-size: var(--paragraph-size-fontSize);
    line-height: var(--paragraph-size-lineHeight);
    font-family: "Montserrat";
    font-weight: 500;
  }
  


  button{
    border: 2px solid black;
  }
  body{

    margin: 0px;
    font-size: 20px
  }
h1 h2 h3 h4{
  font-family:"Dela-Gothic-One"
}
p{
  font-family: 'sans-serif'
}
h1{
  font-size: var(--header-size-fontSize)
}

@font-face {
  font-family: 'Dela-Gothic-One';
  src: url('{{ 'DelaGothicOne-Regular.ttf' | asset_url }}') format('ttf'),
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}