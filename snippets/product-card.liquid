{% assign img_url = product.featured_image | img_url: '400x' %}
<div class="product-card">
  <a href="{{ product.url | within: collection }}" class="product-card__link">
    <div class="product-card__image-wrapper">
      {% if product.featured_image %}
        <img width="500" height="500" src="{{ img_url }}" alt="{{ product.featured_image.alt | escape }}" class="product-card__image">
      {% else %}
        <img  width="500" height="500" src="//placehold.it/400x400?text=No+Image" alt="No image available" class="product-card__image">
      {% endif %}
    </div>
    <div class="product-card__info">
      <h2 class="product-card__title">{{ product.title | escape }}</h2>
      <span class="product-card__price">
        {% if product.compare_at_price > product.price %}
          <span class="product-card__price--sale">{{ product.price | money }}</span>
          <span class="product-card__price--compare">{{ product.compare_at_price | money }}</span>
        {% else %}
          {{ product.price | money }}
        {% endif %}
      </span>
    </div>
  </a>
</div>