<div class="footer-container" data-color-scheme="{{ section.settings.color_scheme }}">
  {% if section.blocks.size > 0 %}
    {% for block in section.blocks %}
      {% if block.type == 'text' %}
        <div class="footer-header" style="font-weight: {{ block.settings['footer-text-weight'] }}">
          {{ block.settings['footer-header-text'] }}
        </div>
        <div class="footer-text" style="font-size: {{ block.settings['footer-font-size'] }}; text-align: {{ block.settings['footer-text-alignment'] }};">
          {{ block.settings['footer-text'] }}
        </div>
      {% endif %}

      {% if block.type == 'nav_links' %}
        <div class="footer-links-wrapper" style="display: flex; flex-direction: {{ block.settings['nav-link-direction'] }};">
          {% for link in block.settings.links %}
            <a href="{{ link.link_url }}" class="footer-link">{{ link.link_text }}</a>
          {% endfor %}
        </div>
      {% endif %}
    {% endfor %}
  {% else %}
    <p>No footer content added.</p>
  {% endif %}
</div>

<style>
  .footer-text {
    font-size: 1.5rem;
  }
  .footer-container {
    align-items: center;
    padding: 2rem;
    font-size: 3rem;
    font-family: 'Dela-Gothic-One';
  }
  .footer-container[data-color-scheme="light"] {
    background-color: whitesmoke;
    color: rgb(39, 39, 39);
  }
  .footer-container[data-color-scheme="default"] {
    background-color: #A3A190;
    color: rgb(242, 239, 239);
  }
  .footer-container[data-color-scheme="dark"] {
    background-color: rgb(23, 23, 23);
    color: whitesmoke;
  }
  .footer-header {
    align-self: center;
  }
  .footer-text {
    font-family: sans-serif;
  }

  .footer-links-wrapper {
    display: flex;
    gap: 10px;
  }
  .footer-link {
    text-decoration: none;
    font-size: 1.5rem;
    font-family: sans-serif;
    color: inherit;
  }
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "light",
      "options": [
        {
          "value": "light",
          "label": "Light"
        },
        {
          "value": "default",
          "label": "Default"
        },
        {
          "value": "dark",
          "label": "Dark"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Footer Text",
      "settings": [
        {
          "type": "textarea",
          "label": "Footer Text",
          "id": "footer-text",
          "default": "Insert your footer text here"
        },
        {
          "type": "select",
          "label": "Font Size",
          "id": "footer-font-size",
          "default": "1.2rem",
          "options": [
            {
              "value": "1.2rem",
              "label": "Default"
            },
            {
              "value": "2rem",
              "label": "Large"
            }
          ]
        },
        {
          "type": "select",
          "label": "Text Alignment",
          "id": "footer-text-alignment",
          "default": "center",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ]
        },
        {
          "type": "select",
          "label": "Font Weight",
          "id": "footer-text-weight",
          "default": "normal",
          "options": [
            {
              "value": "normal",
              "label": "Normal"
            },
            {
              "value": "bold",
              "label": "Bold"
            }
          ]
        }
      ]
    },
    {
      "type": "nav_links",
      "name": "Navigation Links",
      "settings": [
        {
          "type": "select",
          "label": "Link Alignment",
          "id": "nav-link-direction",
          "default": "horizontal",
          "options": [
            {
              "value": "horizontal",
              "label": "Horizontal"
            },
            {
              "value": "vertical",
              "label": "Vertical"
            }
          ]
        },
        {
          "type": "list",
          "id": "links",
          "label": "Navigation Links",
          "settings": [
            {
              "type": "text",
              "id": "link_text",
              "label": "Link Text",
              "default": "Link Text"
            },
            {
              "type": "url",
              "id": "link_url",
              "label": "Link URL",
              "default": "/"
            }
          ]
        }
      ]
    }
  ]
}
{% endschema %}
