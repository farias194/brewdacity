<div class="footer-container" data-color-scheme="{{ section.settings.color_scheme }}">
  {% if section.blocks.size > 0 %}
    {% for block in section.blocks %}
      {% if block.type == 'text' %}
        <div class="footer-header" style="font-weight: {{ block.settings['footer-text-weight'] }}">
          {{ block.settings['footer-header-text'] }}
        </div>
        <div class="footer-text" style="font-weight: {{ block.settings['footer-text-weight'] }}">
          {{ block.settings['footer-text'] }}
        </div>
      {% endif %}
    {% endfor %}
  {% else %}
    <p>No footer content added.</p>
  {% endif %}
</div>

<style>
    .footer-container {
        padding: 2rem;
    }
.footer-container[data-color-scheme="light"] {
  background-color: whitesmoke;
  color: black;
}

.footer-container[data-color-scheme="accent"] {
  background-color: aquamarine;
  color: black;
}

.footer-container[data-color-scheme="dark"] {
  background-color: black;
  color: whitesmoke;
}

.footer-header {
  /* Add your footer header styles here */
}

.footer-text {
  /* Add your footer text styles here */
}
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "light",
      "options": [
        {
          "value": "light",
          "label": "Light"
        },
        {
          "value": "accent",
          "label": "Accent"
        },
        {
          "value": "dark",
          "label": "Dark"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "footer-text",
      "settings": [
        {
          "type": "text",
          "label": "Footer Text",
          "id": "footer-text",
          "default": "Insert your footer text here"
        },
        {
          "type": "text",
          "label": "Footer Header Text",
          "id": "footer-header-text",
          "default": "Thanks for coming to our store"
        },
        {
          "type": "select",
          "label": "Font Weight",
          "id": "footer-text-weight",
          "default": "normal",
          "options": [
            {
              "value": "normal",
              "label": "Normal"
            },
            {
              "value": "bold",
              "label": "Bold"
            }
          ]
        }
      ]
    }
  ]
}
{% endschema %}
