<div class="footer-container" data-color-scheme="{{ section.settings.color_scheme }}">
  {% if section.blocks.size > 0 %}
    <div class="footer-links-wrapper" style="display: flex; flex-direction: {{ section.settings.nav_link_direction }}; gap: 10px;">
      {% for block in section.blocks %}
        {% if block.type == 'nav_link' %}
          <a href="{{ block.settings.link_url }}" class="footer-link">{{ block.settings.link_text }}</a>
        {% endif %}
      {% endfor %}
    </div>
  {% else %}
    <p>No footer links added.</p>
  {% endif %}
</div>

<style>
  .footer-container {
    align-items: center;
    padding: 2rem;
    font-size: 3rem;
    font-family: 'Dela-Gothic-One';
  }
  .footer-container[data-color-scheme="light"] {
    background-color: whitesmoke;
    color: rgb(39, 39, 39);
  }
  .footer-container[data-color-scheme="default"] {
    background-color: #A3A190;
    color: rgb(242, 239, 239);
  }
  .footer-container[data-color-scheme="dark"] {
    background-color: rgb(23, 23, 23);
    color: whitesmoke;
  }
  .footer-links-wrapper {
    display: flex;
    gap: 10px;
  }
  .footer-link {
    text-decoration: none;
    font-size: 1.5rem;
    font-family: sans-serif;
    color: inherit;
  }
</style>

{% schema %}
{
  "name": "Navigation Links",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "light",
      "options": [
        {
          "value": "light",
          "label": "Light"
        },
        {
          "value": "default",
          "label": "Default"
        },
        {
          "value": "dark",
          "label": "Dark"
        }
      ]
    },
    {
      "type": "select",
      "label": "Link Alignment",
      "id": "nav_link_direction",
      "default": "horizontal",
      "options": [
        {
          "value": "horizontal",
          "label": "Horizontal"
        },
        {
          "value": "vertical",
          "label": "Vertical"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "nav_link",
      "name": "Link",
      "settings": [
        {
          "type": "text",
          "id": "link_text",
          "label": "Link Text",
          "default": "Link Text"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Link URL",
          "default": "/"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Navigation Links",
      "category": "Footer"
    }
  ]
}
{% endschema %}


