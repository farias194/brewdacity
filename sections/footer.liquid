<div class="footer-container" data-color-scheme="{{ section.settings.color_scheme }}">
  {% if section.blocks.size > 0 %}
    
    {% for block in section.blocks %}
      {% if block.type == 'text' %}
        <div class="footer-header" style="font-weight: {{ block.settings['footer-text-weight'] }}">
          {{ block.settings['footer-header-text'] }}
        </div>
        <div class="footer-text" style="font-size: {{ block.settings['footer-font-size'] }}; text-align: {{ block.settings['footer-text-alignment'] }};">
          {{ block.settings['footer-text'] }}
        </div>
      {% endif %}
    {% endfor %}

    <!-- Start footer-links-wrapper before the loop for links -->
    <div class="footer-links-wrapper">
      {% for block in section.blocks %}
        {% if block.type == 'footer_link' %}
          <a href="{{ block.settings['footer-link-url'] }}" class="footer-link">
            {{ block.settings['footer-link-text'] }}
          </a>
        {% endif %}
      {% endfor %}
    </div>
    <!-- End footer-links-wrapper after the loop for links -->
    
  {% else %}
    <p>No footer content added.</p>
  {% endif %}
</div>

<style>
  .footer-text {
    font-size: 1.5rem;
  }
  .footer-container {
    align-items: center;
    padding: 5rem 1rem 1rem 5rem;
        font-size: 3rem;
    font-family: 'Dela-Gothic-One';
  }
  .footer-container[data-color-scheme="light"] {
    background-color: whitesmoke;
    color: rgb(39, 39, 39);
  }
  .footer-container[data-color-scheme="default"] {
    background-color: #A3A190;
    color: rgb(242, 239, 239);
  }
  .footer-container[data-color-scheme="dark"] {
    background-color: rgb(23, 23, 23);
    color: whitesmoke;
  }
  .footer-header {
    align-self: center;
  }
  .footer-text {
    font-family: sans-serif;
  }
  .footer-links-wrapper {
    display: flex;
    flex-direction: row;
    gap: 10px;
    padding-top: 1rem;
    padding-bottom: 1rem;
  }
  .footer-link {
    text-decoration: none;
    font-size: 1.5rem;
    font-family: sans-serif;
    color: inherit;
  }
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "light",
      "options": [
        {
          "value": "light",
          "label": "Light"
        },
        {
          "value": "default",
          "label": "Default"
        },
        {
          "value": "dark",
          "label": "Dark"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "footer-text",
      "settings": [
        {
          "type": "textarea",
          "label": "Footer Text",
          "id": "footer-text",
          "default": "Insert your footer text here"
        },
        {
          "type": "select",
          "label": "Font Size",
          "id": "footer-font-size",
          "default": "1.2rem",
          "options": [
            {
              "value": "1.2rem",
              "label": "Default"
            },
            {
              "value": "2rem",
              "label": "Large"
            }
          ]
        },
        {
          "type": "select",
          "label": "Text Alignment",
          "id": "footer-text-alignment",
          "default": "center",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ]
        },
        {
          "type": "select",
          "label": "Font Weight",
          "id": "footer-text-weight",
          "default": "normal",
          "options": [
            {
              "value": "normal",
              "label": "Normal"
            },
            {
              "value": "bold",
              "label": "Bold"
            }
          ]
        }
      ]
    },
    {
      "type": "footer_link",
      "name": "Footer Link",
      "settings": [
        {
          "type": "url",
          "label": "Footer Link URL",
          "id": "footer-link-url",
          "default": "/"
        },
        {
          "type": "text",
          "label": "Footer Link Text",
          "id": "footer-link-text",
          "default": "Link Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "category": "Footer"
    }
  ]
}
{% endschema %}
