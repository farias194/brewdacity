<div class="footer-container" data-color-scheme="{{ section.settings.color_scheme }}">
  {% if section.blocks.size > 0 %}
    {% for block in section.blocks %}
      {% if block.type == 'text' %}
        <div class="footer-header" style="font-weight: {{ block.settings['footer-text-weight'] }}">
          {{ block.settings['footer-header-text'] }}
        </div>
        <div class="footer-text" style="font-weight: {{ block.settings['footer-text-weight'] }}">
          {{ block.settings['footer-text'] }}
        </div>
      {% elseif block.type == 'textarea' %}
        <div class="footer-textarea" style="font-weight: {{ block.settings['footer-textarea-weight'] }}">
          {{ block.settings['footer-textarea-content'] }}
        </div>
      {% endif %}
    {% endfor %}
  {% else %}
    <p>No footer content added.</p>
  {% endif %}
</div>

<style>
  .footer-text{
    font-size: 1.5rem;
    font-family: sans-serif;

  }
 
  .footer-container {
    align-items: center;
    padding: 2rem;
    font-size: 3rem;
    font-family: 'Dela-Gothic-One';
  }
  .footer-container[data-color-scheme="light"] {
    background-color: whitesmoke;
    color: rgb(39, 39, 39);
  }

  .footer-container[data-color-scheme="default"] {
    background-color: #A3A190;
    color: rgb(242, 239, 239);
  }

  .footer-container[data-color-scheme="dark"] {
    background-color: rgb(23, 23, 23);
    color: whitesmoke;
  }

  .footer-header {
    align-self: center;
  }

 
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "light",
      "options": [
        {
          "value": "light",
          "label": "Light"
        },
        {
          "value": "default",
          "label": "Default"
        },
        {
          "value": "dark",
          "label": "Dark"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "footer-text",
      "settings": [
        {
          "type": "textarea",
          "label": "Footer Text",
          "id": "footer-text",
          "default": "Insert your footer text here"
        },
        {
          "type": "select",
          "label": "Font Weight",
          "id": "footer-text-weight",
          "default": "normal",
          "options": [
            {
              "value": "normal",
              "label": "Normal"
            },
            {
              "value": "bold",
              "label": "Bold"
            }
          ]
        }
      ]
    },
    {
      "type": "textarea",
      "name": "footer-textarea",
      "settings": [
        {
          "type": "textarea",
          "label": "Footer Textarea",
          "id": "footer-textarea-content",
          "default": "Insert additional text here"
        },
        {
          "type": "select",
          "label": "Font Weight",
          "id": "footer-textarea-weight",
          "default": "normal",
          "options": [
            {
              "value": "normal",
              "label": "Normal"
            },
            {
              "value": "bold",
              "label": "Bold"
            }
          ]
        }
      ]
    }
  ]
}
{% endschema %}
