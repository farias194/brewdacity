<div class="drink-menu-container"> 
  <h1>our drinks</h1>
  {% if section.blocks.size > 0 %}
    {% for block in section.blocks %}
      {% if block.type == 'drink_item' %}
        <div class="drink-item">
          <div class="drink-name">{{ block.settings.drink_name }}</div>
          <div class="drink-price">{{ block.settings.drink_price | money }}</div>
        </div>
      {% endif %}
    {% endfor %}
  {% else %}
    <p>No items added to the menu.</p>
  {% endif %}
</div>

<style>
    
.drink-menu-container {
  display: flex;
  font-family: sans-serif;
  padding: 10rem;
  flex-direction: column;
  gap: 1rem; /* Optional: Adds spacing between items */
}

.drink-item {
  display: flex;
  border-bottom: 1px solid black;
  justify-content: space-between;
}

.drink-name, .drink-price {
  font-size: var(--header-size-font-size);
  flex: 1;
}
</style>

{% schema %} 
{
  "name": "menu",
  "settings": [],
  "blocks": [
    {
      "type": "drink_item",
      "name": "Drink Item",
      "settings": [
        {
          "type": "text",
          "id": "drink_name",
          "label": "Drink Name"
        },
        {
          "type": "text",
          "id": "drink_price",
          "label": "Drink Price",
          "default": "10"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Drink Menu"
    }
  ]
}
{% endschema %}
