<div class="drink-menu-container" style="background-color: var(--{{section.settings.color_scheme}});"> 
  {% if section.blocks.size > 0 %}
    {% for block in section.blocks %}
      {% if block.type == 'menu_title' %}
        <h2 class="menu-title" style="text-align: {{ block.settings.title_alignment }};">{{ block.settings.menu_title }}</h2>
      {% endif %}
      {% if block.type == 'menu_desc' %}
        <p class="menu-desc" style="text-align: {{ block.settings.desc_alignment }};">{{ block.settings.menu_description }}</p>
      {% endif %}
    {% endfor %}

    <!-- Separate container for drink items -->
    <div class="drink-item-container">
      {% for block in section.blocks %}
        {% if block.type == 'drink_item' %}
          <div class="drink-item">
            <div class="drink-name">{{ block.settings.drink_name }}</div>
            <div class="drink-price">{{ block.settings.drink_price | money }}</div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

  {% else %}
    <p>No items added to the menu.</p>
  {% endif %}
</div>

<style>
  /* Overall container styles */
  .drink-menu-container {
    font-family: 'Dela-Gothic-One', sans-serif;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 4rem 2rem;
    gap: 2rem; /* Space between elements */
    background-color: var(--{{section.settings.color_scheme}});
    color: #333;
  }

  /* Title and description */
  .menu-title {
    font-size: 2.5rem;
    color: #E6844E;
    margin-bottom: 1rem;
  }

  .menu-desc {
    font-family: sans-serif;
    font-size: 1.2rem;
    color: #666;
    max-width: 800px;
    text-align: center;
    margin-bottom: 2rem;
  }

  /* Drink item container styles */
  .drink-item-container {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center; /* Centers drink items */
    width: 100%;
    gap: 2rem;
    padding-top: 2rem;
    border-top: 2px solid rgba(230, 132, 78, 0.3);
  }

  /* Individual drink items */
  .drink-item {
    background-color: #fdfdfd;
    width: 300px;
    padding: 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 1.5rem;
    color: #DE81B5;
    border: 1px solid #E6844E;
    border-radius: 8px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease;
  }

  /* Hover effect for drink items */
  .drink-item:hover {
    transform: scale(1.05);
    box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.15);
  }

  /* Drink name and price styles */
  .drink-name {
    color: #E6844E;
    font-weight: bold;
  }

  .drink-price {
    color: #28A745;
    font-size: 1.5rem;
  }

  /* Responsive styles */
  @media (max-width: 768px) {
    .drink-item-container {
      flex-direction: column;
      align-items: center;
    }

    .drink-item {
      width: 100%;
    }
  }
</style>

{% schema %}
{
  "name": "menu",
  "settings": [
    {
      "type": "select",
      "label": "Color Scheme",
      "id": "color_scheme",
      "options": [
        {
          "value": "brewdacity-bg-color",
          "label": "Default Color"
        },
        {
          "value": "brewdacity-alternate-bg-color",
          "label": "Alternate Color"
        },
        {
          "value": "brewdacity-alternate-bg-color-warm",
          "label": "Alternate Color Warm"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "menu_title",
      "name": "Menu Title",
      "settings": [
        {
          "type": "text",
          "id": "menu_title",
          "label": "Menu Title"
        },
        {
          "type": "select",
          "id": "title_alignment",
          "label": "Menu Title Alignment",
          "options": [
            { "value": "left", "label": "Left" },
            { "value": "right", "label": "Right" },
            { "value": "center", "label": "Center" }
          ],
          "default": "center"
        }
      ]
    },
    {
      "type": "menu_desc",
      "name": "Menu Description",
      "settings": [
        {
          "type": "text",
          "id": "menu_description",
          "label": "Menu Description"
        },
        {
          "type": "select",
          "id": "desc_alignment",
          "label": "Menu Description Alignment",
          "options": [
            { "value": "left", "label": "Left" },
            { "value": "right", "label": "Right" },
            { "value": "center", "label": "Center" }
          ],
          "default": "center"
        }
      ]
    },
    {
      "type": "drink_item",
      "name": "Drink Item",
      "settings": [
        {
          "type": "text",
          "id": "drink_name",
          "label": "Drink Name"
        },
        {
          "type": "text",
          "id": "drink_price",
          "label": "Drink Price",
          "default": "10"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Drink Menu"
    }
  ]
}
{% endschema %}
