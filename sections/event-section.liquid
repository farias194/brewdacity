{% schema %}
  {
    "name": "Event Section",
    "blocks": [
      {
        "type": "event",
        "name": "Event",
        "settings": [
          {
            "id": "event_date",
            "type": "text",
            "label": "Event Date",
            "default": "2024-10-15"
          },
          {
            "id": "event_name",
            "type": "text",
            "label": "Event Name",
            "default": "Game Night"
          },
          {
            "id": "event_description",
            "type": "textarea",
            "label": "Event Description",
            "default": "Join us for an exciting game night with friends and family!"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Event Section",
        "category": "Custom"
      }
    ]
  }
  {% endschema %}
  <div class="event-section-container">
    <div class="title">Events</div>

    {% for block in section.blocks %}
      <div class="event-date-container">
        {% assign event_date = block.settings.event_date %}
        {% assign event_day = event_date | date: "%d" %}
        {% assign event_month = event_date | date: "%B" %}
        {% assign event_year = event_date | date: "%Y" %}
        
        <div class="event-date">
          <span class="event-month">{{ event_month }}</span>
          <span class="event-day">{{ event_day }}</span>
          <span class="event-year">{{ event_year }}</span>
        </div>
        
        <div class="event-info">
          <div class="event-name">
            <strong>Event:</strong> {{ block.settings.event_name }}
          </div>
          <div class="event-description">
            <strong>Description:</strong> {{ block.settings.event_description }}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
  
  <style>
    .title{
      font-family: 'Dela-Gothic-One';
      font-size: 3rem;
      text-align: center;
    }
    .event-section-container{
      color: whitesmoke;
      padding: 10rem;
      display: flex;
      flex-direction: column;
      align-content: center;
      font-size: 2rem;
      font-family: 'Dela-Gothic-One';
width: auto;     
 background-color: #1a1a1a;
    }
    .event-info{
      display: flex;
      flex-direction: column;
      width: 80%;
      align-items: first baseline;
    }
    .event-date-container {
      justify-content: space-around;
      display: flex;
      align-items: center;
      flex-direction: row;
      padding: 1rem; /* Padding of 5rem */
      text-align: center; /* Center the text */
      margin-bottom: 2rem; /* Space below the date container */
    }.event-date{
      display: flex;
      flex-direction: column;
      border: 1px solid white;
      padding: 1rem;
    }
    
    .event-month {
      font-size: 1rem; /* Font size for the month */
      display: block; /* Ensures the month is on top */
    }
    
    .event-day {
      font-size: 3rem; /* Font size for the day */
      display: block; /* Ensures the day is centered */
    }
    
    .event-year {
      font-size: 1rem; /* Font size for the year */
      display: block; /* Ensures the year is below the day */
    }
  
    .event-name, .event-description {
      margin-bottom: 10px;
    }
    .event-description{
      font-family: sans-serif;
    }
  </style>
