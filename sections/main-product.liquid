<div>hi</div>
{% for block in section.blocks %}
    {% if block.type == 'text' %}
      <div class="product-title">
        {{ block.settings.title_text }}
      </div>
    {% elsif block.type == 'price' %}
      <div class="product-price">
        {{ product.price | money }}
      </div>
    {% elsif block.type == 'buy-button' %}
      <button class="buy-button">
        Buy Now
      </button>
    {% endif %}
   
  {% endfor %}
{% schema  %} 
{
    
    "name": "main-product",
    "tag": "section",
    "class": "section",
    "blocks": [
        {
            "name": "title",
            "type": "text",
            "settings": [
                
                {
                    "type": "text",
                     "id":"title_text",
                     "label": "Title Text",
                     "default": "Product Title"   


                }
            ]
           
            },
            {
                "name": "price",
                "type":"price"

            },
                {"name": "buy-button",
                "type":"buy-button"

            },
            {
                "name": "image",
                "type": "image"
            }


        
    ],
  
     "settings": [

            {
                "type": "range",
                "id": "columns",
                "label": "columns",
                "min": 1,
                "max": 6,
                "step": 1,
                "default": 2


            }

        
]

}

 {% endschema %}