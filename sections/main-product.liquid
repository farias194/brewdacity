<div id="product-wrapper" class="flex-container">
  <form id="add-to-cart-form" action="/cart/add.js" method="post">
    <div class="product-wrapper" style="display: flex; flex-direction: row;">
      <!-- Image Div -->
      {% for block in section.blocks %}
        {% if block.type == 'image' %}
          {% if product.featured_image %}
            <div class="image-div">
              <img width="700px" src="{{ product.featured_image | img_url: 'large' }}" alt="{{ product.title }}">
            </div>
          {% endif %}
        {% endif %}
      {% endfor %}

      <!-- Product Info Div -->
      <div class="product-info" style="display: flex; flex-direction: column; justify-content: space-between;">
        <!-- Title -->
        {% for block in section.blocks %}
          {% if block.type == 'text' %}
            <div class="product-title">
              <h1>{{ product.title }}</h1>
            </div>
          {% endif %}

          <!-- Description -->
          {% if block.type == 'product-description' %}
            <div class="product-description">
              <p>{{ block.settings.description_text }}</p>
            </div>
          {% endif %}

          <!-- Price -->
          {% if block.type == 'price' %}
            <div class="product-price">
              {{ product.price | money }}
            </div>
          {% endif %}

          <!-- Variant Selector and Buttons -->
          {% if block.type == 'buy-button' %}
            <div class="product-buy">
              {% if product.variants.size > 1 %}
                <select name="id">
                  {% for variant in product.variants %}
                    <option value="{{ variant.id }}">{{ variant.title }} - {{ variant.price | money }}</option>
                  {% endfor %}
                </select>
              {% else %}
                <input type="hidden" name="id" value="{{ product.variants.first.id }}">
              {% endif %}

              <input type="number" name="quantity" value="1" min="1" class="quantity-selector">

              <div class="buttons" style="display: flex; flex-direction: row; gap: 10px;">
                <button type="submit" class="add-to-cart">Add to Cart</button>
                <button type="submit" class="buy-button">Buy Now</button>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </form>
</div>

<style>
  #product-wrapper {
    margin: 0px;
    background-color: #FBFFF1;
    flex-direction: row;
    padding: 10rem;
    flex-wrap: wrap;
  }
  
  .product-wrapper {
    display: flex;
    flex-wrap: wrap;
    max-width: 100%;
    align-items: self-start;
  }
  
  .image-div img {
    max-width: 100%;
    height: auto;
  }

  .image-div {
    max-width: 60%;
  }
  
  .product-info {
    padding: 20px;
    flex-grow: 1;
  }

  .product-title {
    font-size: var(--header-size-fontSize);
    font-family: 'Dela-Gothic-One';
    color: #E6844E;
  }

  .product-description {
    font-size: 1rem;
    color: #333;
    margin-top: 10px;
        font-weight: lighter;
    font-family: sans-serif;
    width: 90%;
  }
  
  .product-price {
    font-size: 2rem;
    color: grey;
    margin: 0px;
    font-family: Arial;
  }
  
  .add-to-cart, .buy-button {
    flex: 1;
    padding: 10px 20px;
    font-size: 16px;
    cursor: pointer;
  }
  
  .buy-button {
    background-color: #E6EE87;
  }
  
  .quantity-selector {
    margin-top: 10px;
    width: 60px;
  }
  
  .buttons {
    margin-top: 20px;
  }
</style>

{% schema %}
{
  "name": "main-product",
  "tag": "section",
  "class": "section",
  "blocks": [
    {
      "name": "title",
      "type": "text",
      "settings": [
        {
          "type": "text",
          "id": "title_text",
          "label": "Title Text",
          "default": "Product Title"
        }
      ]
    },
    {
      "name": "description",
      "type": "product-description",
      "settings": [
        {
          "type": "textarea",
          "id": "description_text",
          "label": "Product Description",
          "default": "Enter the product description here."
        }
      ]
    },
    {
      "name": "price",
      "type": "price"
    },
    {
      "name": "buy-button",
      "type": "buy-button"
    },
    {
      "name": "image",
      "type": "image"
    }
  ],
  "settings": [
    {
      "type": "range",
      "id": "columns",
      "label": "Columns",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 2
    }
  ]
}
{% endschema %}
