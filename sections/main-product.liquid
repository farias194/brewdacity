<div id="product-wrapper" class="flex-container">
  <form id="add-to-cart-form" action="/cart/add.js" method="post">
    {% for block in section.blocks %}
      {% if block.type == 'text' %}
        <div class="product-title">
          {{ block.settings.title_text }}
        </div>
      {% elsif block.type == 'price' %}
        <div class="product-price">
          {{ product.price | money }}
        </div>
      {% elsif block.type == 'buy-button' %}
        <div class="product-buy">
          <!-- Variant Selector -->
          {% if product.variants.size > 1 %}
            <select name="id">
              {% for variant in product.variants %}
                <option value="{{ variant.id }}">{{ variant.title }} - {{ variant.price | money }}</option>
              {% endfor %}
            </select>
          {% else %}
            <input type="hidden" name="id" value="{{ product.variants.first.id }}">
          {% endif %}

          <!-- Quantity Selector -->
          <input type="number" name="quantity" value="1" min="1" class="quantity-selector">

          <!-- Buy Button -->
          <button type="submit" class="buy-button">Add to Cart</button>
        </div>
      {% elsif block.type == 'image' %}
        {% if product.featured_image %}
          <div class="product-image">
            <img src="{{ product.featured_image | img_url: 'large' }}" alt="{{ product.title }}">
          </div>
        {% endif %}
      {% endif %}
    {% endfor %}
  </form>
</div>

{% schema %}
{
  "name": "main-product",
  "tag": "section",
  "class": "section",
  "blocks": [
    {
      "name": "title",
      "type": "text",
      "settings": [
        {
          "type": "text",
          "id": "title_text",
          "label": "Title Text",
          "default": "Product Title"
        }
      ]
    },
    {
      "name": "price",
      "type": "price"
    },
    {
      "name": "buy-button",
      "type": "buy-button"
    },
    {
      "name": "image",
      "type": "image"
    }
  ],
  "settings": [
    {
      "type": "range",
      "id": "columns",
      "label": "Columns",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 2
    }
  ]
}
{% endschema %}