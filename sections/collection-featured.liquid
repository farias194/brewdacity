<!-- sections/collection-featured.liquid -->
<div class="collection-featured" style="background-color: var(--{{ section.settings.bg_color }});">
  {% if section.blocks.size > 0 %}
    {% for block in section.blocks %}
    <div class="collection">
      {% if block.settings.collection %}
        <h2 class="featured-collection-header" style="text-align: {{ block.settings.header_alignment }};">
          Featured Collection
        </h2>
   
        <div class="products-grid">
          {% assign columns_desktop = block.settings.columns_desktop %}
          {% assign columns_mobile = block.settings.columns_mobile %}
          
          {% for product in collections[block.settings.collection].products %}
            <div class="product">
              <a href="{{ product.url }}">
                <img class="product-image" src="{{ product.featured_image | img_url: 'large' }}" alt="{{ product.title }}">
                <h4 class="product-title">{{ product.title }}</h4>
                <p class="product-price">{{ product.price | money }}</p>
                <div class="buttons">
                  <button type="submit" class="add-to-cart">Add to Cart</button>
                  <button type="submit" class="buy-button">Buy Now</button>
                </div>
              </a>
            </div>
          {% endfor %}
        </div>
      {% else %}
        <p>No collection selected</p>
      {% endif %}
    </div>
    {% endfor %}
  {% else %}
    <p>No collections added</p>
  {% endif %}
  <div><button class="see-more">See More</button></div>
</div>

{% schema %}
{
  "name": "Collection Feature",
  "settings": [
    {
      "type": "select",
      "id": "bg_color",
      "label": "Background Color",
      "default": "brewdacity-bg-color",
      "options": [
        { "value": "brewdacity-bg-color", "label": "Default Color" },
        { "value": "brewdacity-alternate-bg-color", "label": "Alternate Color" },
        { "value": "brewdacity-alternate-bg-color-warm", "label": "Alternate Color Warm" }
      ]
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Select Collection"
        },
        {
          "type": "range",
          "id": "columns_desktop",
          "label": "Columns on Desktop",
          "min": 1,
          "max": 6,
          "default": 4
        },
        {
          "type": "range",
          "id": "columns_mobile",
          "label": "Columns on Mobile",
          "min": 1,
          "max": 4,
          "default": 1
        },
        {
          "type": "select",
          "id": "header_alignment",
          "label": "Header Alignment",
          "default": "center",
          "options": [
            { "value": "left", "label": "Left" },
            { "value": "center", "label": "Center" },
            { "value": "right", "label": "Right" }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection Feature",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<style>
  .featured-collection-header {
    font-family: 'Dela-Gothic-One';
    font-size: 2rem;
    margin: 0px;
    color: #E6844E;
    padding: 2rem 0px 0px 0px;
  }

  .collection-title {
    font-size: 1rem;
    font-family: 'Dela-Gothic-One';
  }

  .buttons {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    font-family: bold;
    justify-content: center;
  }

  .buttons > * {
    margin-right: 10px;
    min-width: 100px;
    background-color: gray;
  }

  .product {
    display: flex;
    flex-direction: column;
    
    justify-content: space-between;
    align-items: center;
    border-radius: 2%;
    padding: 1rem;
    margin: 0;
    min-height: 400px;
  }

  .product img {
    border-radius: 5%;
    padding: 1rem;
    width: 100%;
    max-width: 300px;
    height: auto;
    object-fit: contain;
  }

  .product-title {
    font-size: 1.5rem;
    text-align: center;
    color: #E6844E;
    font-family: 'Dela-Gothic-One';
  }

  .product-price {
    font-size: 2rem;
    text-align: center;
    font-family: 'Dela-Gothic-One';
    color: #333;
    margin-bottom: 1rem; /* Adds spacing below the price */
  }

  a {
    text-decoration: none;
    color: inherit; /* Inherits text color to avoid underlining */
  }

  .products-grid {
    display: grid;
    max-width: 100%;
    gap: 2rem;
    padding: 5rem;
    width: fit-content;
    align-items: start;
  }

  .see-more {
    align-self: center;
    padding: 1rem;
    margin-left: -80%;
    border: none;
    background-color: orange;
    font-size: 1rem;
  }
  .add-to-cart{
    padding: 1rem;
    background-color: #E6EE87
  }
.buy-button{
  background-color: #677ef8;
}
  @media (min-width: 768px) {
    .products-grid {
      grid-template-columns: repeat({{ columns_desktop }}, 1fr);
    }
  }

  @media (max-width: 767px) {
    .products-grid {
      grid-template-columns: repeat({{ columns_mobile }}, 1fr);
    }
  }

  @media ( width < 600px) {
.products-grid{
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  
}    
  }
</style>
