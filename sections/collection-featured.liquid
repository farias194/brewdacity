<!-- sections/collection-featured.liquid -->

<div class="collection-featured">
  {% if section.settings.collection %}
    <h2>{{ collections[section.settings.collection].title }}</h2>
    <div class="products-grid">
      {% assign columns_desktop = section.settings.columns_desktop %}
      {% assign columns_mobile = section.settings.columns_mobile %}
      
      <style>
        .products-grid {
          display: grid;
          gap: 10px;
        }

        @media (min-width: 768px) {
          .products-grid {
            grid-template-columns: repeat({{ columns_desktop }}, 1fr);
          }
        }

        @media (max-width: 767px) {
          .products-grid {
            grid-template-columns: repeat({{ columns_mobile }}, 1fr);
          }
        }
      </style>

      {% for product in collections[section.settings.collection].products %}
        <div class="product">
          <a href="{{ product.url }}">
            <img src="{{ product.featured_image | img_url: 'large' }}" alt="{{ product.title }}">
            <h3>{{ product.title }}</h3>
            <p>{{ product.price | money }}</p>
          </a>
        </div>
      {% endfor %}
    </div>
  {% else %}
    <p>No collection selected</p>
  {% endif %}
</div>

{% schema %}
{
  "name": "Collection Feature",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Select Collection"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "label": "Columns on Desktop",
      "min": 1,
      "max": 6,
      "default": 4
    },
    {
      "type": "range",
      "id": "columns_mobile",
      "label": "Columns on Mobile",
      "min": 3,
      "max": 9,
      "default": 3
    }
  ]
}
{% endschema %}