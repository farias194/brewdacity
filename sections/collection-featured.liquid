<!-- sections/collection-featured.liquid -->
<div class="collection-featured" style="background-color: var(--{{ section.settings.bg_color }});">
  {% if section.blocks.size > 0 %}
    {% for block in section.blocks %}
    <div class="collection">
      {% if block.settings.collection %}
        <h2 class="featured-collection-header">Featured collection</h2>
        <h2 class="collection-title">{{ collections[block.settings.collection].title }}</h2>
        <div class="products-grid">
          {% assign columns_desktop = block.settings.columns_desktop %}
          {% assign columns_mobile = block.settings.columns_mobile %}
          
          {% for product in collections[block.settings.collection].products %}
            <div class="product">
              <a href="{{ product.url }}">
                <img class="product-image" src="{{ product.featured_image | img_url: 'large' }}" alt="{{ product.title }}">
                <h4 class="product-title">{{ product.title }}</h4>
                <p class="product-price">{{ product.price | money }}</p>
                <div class="buttons">
                  <button type="submit" class="add-to-cart">Add to Cart</button>
                  <button type="submit" class="buy-button">Buy Now</button>
                </div>
              </a>
            </div>
          {% endfor %}
        </div>
      {% else %}
        <p>No collection selected</p>
      {% endif %}
    </div>
    {% endfor %}
  {% else %}
    <p>No collections added</p>
  {% endif %}
  <div><button class="see-more">See More</button></div>
</div>

{% schema %}
{
  "name": "Collection Feature",
  "settings": [
    {
      "type": "select",
      "id": "bg_color",
      "label": "Background Color",
      "default": "brewdacity-bg-color",
      "options": [
        {
          "value": "brewdacity-bg-color",
          "label": "Default Color"
        },
        {
          "value": "brewdacity-alternate-bg-color",
          "label": "Alternate Color"
        },
        {
          "value": "brewdacity-alternate-bg-color-warm",
          "label": "Alternate Color Warm"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Select Collection"
        },
        {
          "type": "range",
          "id": "columns_desktop",
          "label": "Columns on Desktop",
          "min": 1,
          "max": 6,
          "default": 4
        },
        {
          "type": "range",
          "id": "columns_mobile",
          "label": "Columns on Mobile",
          "min": 1,
          "max": 4,
          "default": 1
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection Feature",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<style>
  .featured-collection-header {
    font-family: 'Dela-Gothic-One';
    font-size: 2rem;
    color: orange;
  }

  .collection-title {
    font-size: 1rem;
    font-family: 'Dela-Gothic-One';
    text-align: center;
  }

  .buttons {
    display: flex;
    justify-content: space-between;
    width: 80%;
  }

  .buttons > * {
    margin-right: 10px;
    background-color: gray;
  }

  .product-price {
    font-size: 2rem;
    font-family: Arial, sans-serif;
    color: rgb(25, 25, 25);
    margin: 0;
  }

  .add-to-cart {
    background-color: #E6EE87;
  }

  .buy-button {
    background-color: var(--button-color-1);
  }

  .collection {
    margin-top: -50px;
    display: flex;
    flex-direction: column;
  }

  .product {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    border-radius: 2%;
    padding: 1rem;
    margin: 0;
    min-height: 400px; /* Ensure consistent height across products */
  }

  .product img {
    border-radius: 5%;
    padding: 1rem;
    max-width: 80%;
    height: 250px; /* Fixed height for images */
    object-fit: cover; /* Prevent distortion */
    overflow: hidden;
  }

  .product-title {
    font-size: 1.5rem;
    text-align: center;
    color: #E6844E;
  }

  .products-grid {
    display: grid;
    max-width: 100%;
    gap: 2rem;
    padding: 5rem;
    width: fit-content;
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    align-items: start; /* Align products at the top */
  }

  .see-more {
    padding: 2rem;
    border: none;
    background-color: orange;
    font-size: 1rem;
  }

  @media (min-width: 768px) {
    .products-grid {
      grid-template-columns: repeat({{ columns_desktop }}, 1fr);
    }
  }

  @media (max-width: 767px) {
    .products-grid {
      grid-template-columns: repeat({{ columns_mobile }}, 1fr);
    }
  }
</style>
